{
  "name": "buttercup-web",
  "version": "0.14.1",
  "description": "Buttercup core library for the web.",
  "main": "build/buttercup.min.js",
  "scripts": {
    "test": "npm run build && npm run karma",
    "test:ci": "npm test",
    "prepublish": "npm run build",
    "build": "webpack && npm run minify",
    "karma": "karma start",
    "dev": "webpack --progress --watch",
    "minify": "uglifyjs --compress --screw-ie8 --output ./build/buttercup.min.js -- ./build/buttercup.js"
  },
  "files": [
    "build/buttercup.js",
    "build/buttercup.min.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buttercup-pw/buttercup-core-web.git"
  },
  "keywords": [
    "buttercup",
    "password",
    "security",
    "encryption"
  ],
  "author": "Perry Mitchell <perry@perrymitchell.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buttercup-pw/buttercup-core-web/issues"
  },
  "homepage": "https://github.com/buttercup-pw/buttercup-core-web#readme",
  "dependencies": {
    "babel-core": "~6.10.4",
    "babel-loader": "~6.2.4",
    "babel-preset-es2015": "~6.9.0",
    "buttercup": "0.30.0-rc1",
    "crypto-browserify": "~3.11.0",
    "json-loader": "~0.5.4",
    "uglifyjs": "~2.4.10",
    "webpack": "~1.13.3"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.2.0",
    "karma-sinon": "^1.0.5",
    "mocha": "^3.1.2",
    "sinon": "^1.17.6"
  }
}
